                    </Style.Triggers>
                </Style>
            </Grid.Style>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Image x:Name="After6" Source="/Resources/Images/AdvancedPBR/AdvancedPBRReflectanceZeroNine.jpg" HorizontalAlignment="Left"
                Grid.ColumnSpan="3" />
            <Image x:Name="Before6" Source="/Resources/Images/AdvancedPBR/AdvancedPBRReflectanceZeroTwo.jpg"  HorizontalAlignment="Left"
                Width="{Binding ActualWidth, ElementName=After6}"
                Height="{Binding ActualHeight, ElementName=After6}" />
            <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch"  ResizeDirection="Columns" ResizeBehavior="PreviousAndNext" Panel.ZIndex="2" Width="2.5" Background="White">
            </GridSplitter>
            <GridSplitter Template="{DynamicResource CustomSplitter69}"  Grid.Column="1" Height="Auto" Width="1" HorizontalAlignment="Center"/>
        </Grid>

        <!--Tweaked Default -> Edited Aircraft VC Ambient-->
        <Grid x:Name="Grid7">
            <Grid.Style>
                <Style TargetType="Grid">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsSelected,ElementName=BoxItemVCAmbient}" Value="True">
                            <Setter Property="Visibility" Value="Visible"/>
