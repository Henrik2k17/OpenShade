            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Image x:Name="After4" Source="/Resources/Images/AdvancedPBR/AdvancedPBRSpecularOneFive.jpg" HorizontalAlignment="Left"
                Grid.ColumnSpan="3" />
            <Image x:Name="Before4" Source="/Resources/Images/AdvancedPBR/AdvancedPBRSpecularZeroSeven.jpg"  HorizontalAlignment="Left"
                Width="{Binding ActualWidth, ElementName=After4}"
                Height="{Binding ActualHeight, ElementName=After4}" />
            <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch"  ResizeDirection="Columns" ResizeBehavior="PreviousAndNext" Panel.ZIndex="2" Width="2.5" Background="White">
            </GridSplitter>
            <GridSplitter Template="{DynamicResource CustomSplitter69}"  Grid.Column="1" Height="Auto" Width="1" HorizontalAlignment="Center"/>
        </Grid>

        <!--Tweaked Default -> Edited Aircraft Ambient-->
        <Grid x:Name="Grid5">
            <Grid.Style>
                <Style TargetType="Grid">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsSelected,ElementName=BoxItemAmbientLighting}" Value="True">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Image x:Name="After5" Source="/Resources/Images/AdvancedPBR/AdvancedPBRAircraftAmbientZeroTwo.jpg" HorizontalAlignment="Left"
                Grid.ColumnSpan="3" />
            <Image x:Name="Before5" Source="/Resources/Images/AdvancedPBR/AdvancedPBRAircraftAmbientOneThree.jpg"  HorizontalAlignment="Left"
                Width="{Binding ActualWidth, ElementName=After5}"
                Height="{Binding ActualHeight, ElementName=After5}" />
            <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch"  ResizeDirection="Columns" ResizeBehavior="PreviousAndNext" Panel.ZIndex="2" Width="2.5" Background="White">
            </GridSplitter>
            <GridSplitter Template="{DynamicResource CustomSplitter69}"  Grid.Column="1" Height="Auto" Width="1" HorizontalAlignment="Center"/>
        </Grid>

        <!--Tweaked Default -> Edited Aircraft Reflectance-->
        <Grid x:Name="Grid6">
            <Grid.Style>
                <Style TargetType="Grid">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsSelected,ElementName=BoxItemAircraftReflectance}" Value="True">
                            <Setter Property="Visibility" Value="Visible"/>
