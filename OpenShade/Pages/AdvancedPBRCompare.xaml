                    </Style.Triggers>
                </Style>
            </Grid.Style>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Image x:Name="After7" Source="/Resources/Images/AdvancedPBR/AdvancedPBRVCAmbientOneSeven.jpg" HorizontalAlignment="Left"
                Grid.ColumnSpan="3" />
            <Image x:Name="Before7" Source="/Resources/Images/AdvancedPBR/AdvancedPBRVCAmbientOneZero.jpg"  HorizontalAlignment="Left"
                Width="{Binding ActualWidth, ElementName=After7}"
                Height="{Binding ActualHeight, ElementName=After7}" />
            <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch"  ResizeDirection="Columns" ResizeBehavior="PreviousAndNext" Panel.ZIndex="2" Width="2.5" Background="White">
            </GridSplitter>
            <GridSplitter Template="{DynamicResource CustomSplitter69}"  Grid.Column="1" Height="Auto" Width="1" HorizontalAlignment="Center"/>
        </Grid>

        <!--Tweaked Default -> Edited Day Ambient-->
        <Grid x:Name="Grid8">
            <Grid.Style>
                <Style TargetType="Grid">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsSelected,ElementName=BoxItemAmbientDay}" Value="True">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Image x:Name="After8" Source="/Resources/Images/AdvancedPBR/AdvancedPBRAmbientDayOneZero.jpg" HorizontalAlignment="Left"
                Grid.ColumnSpan="3" />
            <Image x:Name="Before8" Source="/Resources/Images/AdvancedPBR/AdvancedPBRAmbientDayZeroThree.jpg"  HorizontalAlignment="Left"
                Width="{Binding ActualWidth, ElementName=After8}"
                Height="{Binding ActualHeight, ElementName=After8}" />
            <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch"  ResizeDirection="Columns" ResizeBehavior="PreviousAndNext" Panel.ZIndex="2" Width="2.5" Background="White">
            </GridSplitter>
            <GridSplitter Template="{DynamicResource CustomSplitter69}"  Grid.Column="1" Height="Auto" Width="1" HorizontalAlignment="Center"/>
        </Grid>

        <!--Tweaked Default -> Edited Night Ambient-->
        <Grid x:Name="Grid9">
            <Grid.Style>
                <Style TargetType="Grid">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsSelected,ElementName=BoxItemAmbientNight}" Value="True">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Image x:Name="After9" Source="/Resources/Images/AdvancedPBR/AdvancedPBRAmbientNightOneZero.jpg" HorizontalAlignment="Left"
                Grid.ColumnSpan="3" />
            <Image x:Name="Before9" Source="/Resources/Images/AdvancedPBR/AdvancedPBRAmbientNightZeroOne.jpg"  HorizontalAlignment="Left"
                Width="{Binding ActualWidth, ElementName=After9}"
                Height="{Binding ActualHeight, ElementName=After9}" />
            <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch"  ResizeDirection="Columns" ResizeBehavior="PreviousAndNext" Panel.ZIndex="2" Width="2.5" Background="White">
            </GridSplitter>
            <GridSplitter Template="{DynamicResource CustomSplitter69}"  Grid.Column="1" Height="Auto" Width="1" HorizontalAlignment="Center"/>
        </Grid>




        <Button Content="Close" Click="CloseBTN_Click" HorizontalAlignment="Center" Height="29" Margin="0,0,0,09" Grid.Row="1" VerticalAlignment="Bottom" Grid.ColumnSpan="3" Width="150"/>
        <ComboBox HorizontalAlignment="Center" VerticalAlignment="Bottom" Height="29"  VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Margin="0,0,-600,09" Width="138">
            <ComboBoxItem x:Name="Default" IsSelected="True">Default</ComboBoxItem>
            <ComboBoxItem x:Name="BoxItemDiffuseColor">Diffuse Color</ComboBoxItem>
            <ComboBoxItem x:Name="BoxItemIBLSaturation">IBL Saturation</ComboBoxItem>
            <ComboBoxItem x:Name="BoxItemIBLSpecular">IBL Specular</ComboBoxItem>
            <ComboBoxItem x:Name="BoxItemAmbientLighting">Ambient Lighting</ComboBoxItem>
            <ComboBoxItem x:Name="BoxItemAmbientDay">Ambient Day</ComboBoxItem>
            <ComboBoxItem x:Name="BoxItemAmbientNight">Ambient Night</ComboBoxItem>
            <ComboBoxItem x:Name="BoxItemVCAmbient">Cockpit Ambient</ComboBoxItem>
            <ComboBoxItem x:Name="BoxItemAircraftReflectance">Reflectance Intensity</ComboBoxItem>
        </ComboBox>


    </Grid>

</Window>